@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model SCommerce.Web.Areas.Admin.ViewModels.CMSSlidePrincipalViewModel

@{
    ViewData["Title"] = "Slide Principal";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}



<!-- Tell the browser to be responsive to screen width -->
<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
<!-- Bootstrap 3.3.7 -->
@*<link rel="stylesheet" href="~/dashboard_components/bootstrap/dist/css/bootstrap.min.css">*@
<!-- iCheck for checkboxes and radio inputs -->
<link rel="stylesheet" href="~/dashboard_components/plugins/iCheck/all.css">
<!-- Font Awesome -->
<link rel="stylesheet" href="~/dashboard_components/font-awesome/css/font-awesome.min.css">
<!-- Ionicons -->
<link rel="stylesheet" href="~/dashboard_components/Ionicons/css/ionicons.min.css">
<!-- Theme style -->
@*<link rel="stylesheet" href="~/dashboard_components/dist/css/AdminLTE.min.css">*@

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            CMS
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-action="Index"><i class="fa fa-home"></i>Dashboard</a></li>
            <li class="active">Lojas</li>
        </ol>
    </section>
    <section class="content">
        <div class="box b-commerce-box">
            @*<div class="box-header">
                <h2>Alterar Informações</h2>
            </div>*@
            <div class="box-body">
                <form asp-area="Admin" asp-controller="CMS" asp-action="SlidePrincipal" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- CMS Endereços -->
                    <div class="">
                        <div class="box box-default collapsed-box">
                            <div class="box-header with-border">
                                <h3 class="box-title">Slide Principal</h3>
                                <div class="box-tools pull-right">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                                <!-- /.box-tools -->
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="TituloPrincipal" class="control-label"></label>
                                            <input asp-for="TituloPrincipal" class="form-control" />
                                            <span asp-validation-for="TituloPrincipal" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Subtitulo" class="control-label"></label>
                                            <input asp-for="Subtitulo" class="form-control" />
                                            <span asp-validation-for="Subtitulo" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-8 form-group">
                                        <input type="file" asp-for="ArquivoImagem" />
                                    </div>
                                    <div class="form-group col-md-2">
                                        <button type="submit" name="submit" value="Adiconar" class="btn btn-info btn-block btn-social">
                                            <i class="fa fa-plus"></i> Adicionar
                                        </button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <table id="tb-contato-loja-enderecos" class="table table-bordered table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(x => x.TituloPrincipal)
                                                    </th>
                                                    <td></td>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.Slides != null)
                                                {
                                                    @foreach (var item in Model.Slides)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(itemModel => item.TituloPrincipal)
                                                            </td>
                                                            <td>
                                                                <button type="submit" name="submit" value="ExcluirSlide_@item.ID" style="background-color: #f0f8ff00;">
                                                                    <i class="fa fa-trash-o"></i>
                                                                </button>
                                                            </td>
                                                        </tr>

                                                    }

                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(x => x.TituloPrincipal)
                                                    </th>
                                                    <td></td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                                
                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </section>
</div>


<!-- jQuery 3 -->
<script src="~/dashboard_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="~/dashboard_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- iCheck 1.0.1 -->
<script src="~/dashboard_components/plugins/iCheck/icheck.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="~/dashboard_components/dist/js/demo.js"></script>

<script src="~/js/localizacao.js"></script>