@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model SCommerce.Web.Areas.Admin.ViewModels.FabricanteViewModels

@{
    ViewData["Title"] = "Fabricante - " + Model.Nome;
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    @*<link rel="stylesheet" href="~/dashboard_components/bootstrap/dist/css/bootstrap.min.css">*@
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/dashboard_components/plugins/iCheck/all.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/dashboard_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/dashboard_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    @*<link rel="stylesheet" href="~/dashboard_components/dist/css/AdminLTE.min.css">*@

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Fabricantes
            <small>Detahes de @Model.Nome</small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-action="Index"><i class="fa fa-home"></i>Dashboard</a></li>
            <li class="active">Fabricantes</li>
        </ol>
    </section>
    <section class="content">
        <div class="box b-commerce-box">
            <div class="box-header">
                <h4>Fabricante</h4>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-12 col-md-4">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Nome)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Nome)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.DataCadastro)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DataCadastro)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.DataAtualizacao)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DataAtualizacao)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Ativo)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Ativo)
                            </dd>
                            <dd>
                                @Html.HiddenFor(model => model.ID)
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <a href='@Url.Action("Edit", "Fabricante", new { idFabricante = Model.ID})' class="btn btn-success btn-block btn-social">
                            <i class="fa fa-edit white"></i> Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

    <!-- jQuery 3 -->
    <script src="~/dashboard_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/dashboard_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck 1.0.1 -->
    <script src="~/dashboard_components/plugins/iCheck/icheck.min.js"></script>
    <!-- FastClick -->
    @*<script src="~/dashboard_components/fastclick/lib/fastclick.js"></script>*@
    <!-- AdminLTE App -->
    @*<script src="~/dashboard_components/dist/js/adminlte.min.js"></script>*@
    <!-- AdminLTE for demo purposes -->
    <script src="~/dashboard_components/dist/js/demo.js"></script>
