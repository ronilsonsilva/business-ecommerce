@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<SCommerce.Web.Areas.Admin.ViewModels.FornecedorViewModel>

@{
    ViewData["Title"] = "Fornecedores - Dashboard";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Fornecedores
            <small>Gestão de fornecedores</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i>Dashboard</a></li>
            <li class="active">Fornecedores</li>
        </ol>
    </section>

    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>@Model.Count()</h3>
                        <p>Fornecedores Cadastrado</p>
                    </div>
                    <div class="icon">
                        <i class="ion-ios-box-outline"></i>
                    </div>
                    <a href='@Url.Action("Create","Fornecedor")' class="small-box-footer">Adicionar Novo <i class="fa fa-plus"></i></a>

                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>44</h3>

                        <p>Fornecedores com produtos</p>
                    </div>
                    <div class="icon">
                        <i class="ion-ios-cart"></i>
                    </div>
                    <a href="#" class="small-box-footer">Listar <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>@Model.Where(e => e.Ativo == true).Count()</h3>

                        <p>Fornecedores Ativo</p>
                    </div>
                    <div class="icon">
                        <i class="ion-android-checkmark-circle"></i>
                    </div>
                    <a href="#" class="small-box-footer">Listar Ativos <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>@Model.Where(e => e.Ativo == false).Count()</h3>

                        <p>Fornecedores Inativo</p>
                    </div>
                    <div class="icon">
                        <i class="ion-ios-locked-outline"></i>
                    </div>
                    <a href="#" class="small-box-footer">Listar Inativos <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>

        <div class="">
            <div class="box b-commerce-box">
                <div class="box-header">
                    <div class="row">
                    </div>
                </div>
                <div class="box-body">
                    <table id="table-fornecedor" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DataCadastro)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DataAtualizacao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ativo)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataCadastro)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataAtualizacao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ativo)
                                    </td>
                                    <td>
                                        <a href='@Url.Action("Edit", "Fornecedor", new { idFornecedor = item.ID  })' class="mall-box-footers"><i class="fa fa-edit"></i></a>
                                        <a href='@Url.Action("Details", "Fornecedor", new { idFornecedor = item.ID })' class="mall-box-footers"><i class="fa fa-search"></i></a>
                                        <a href='@Url.Action("Delete", "Fornecedor", new { idFornecedor = item.ID })' class="mall-box-footers"><i class="fa  fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DataCadastro)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DataAtualizacao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ativo)
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>




<!-- jQuery 3 -->
<script src="~/dashboard_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="~/dashboard_components/bootstrap/dist/js/bootstrap.min.js"></script>
