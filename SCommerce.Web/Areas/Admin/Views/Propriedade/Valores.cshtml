@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<SCommerce.Web.Areas.Admin.ViewModels.PropriedadeValorViewModel>

@{
    ViewData["Title"] = "Valores da Propriedade " + ViewBag.NomePropriedade;
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Valores da Propriedade <b>@ViewBag.NomePropriedade</b>
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-action="Index"><i class="fa fa-home"></i>Propriedade</a></li>
            <li class="active">Valores</li>
        </ol>
    </section>

    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>@Model?.Count()</h3>
                        <p>Valores</p>
                    </div>
                    <div class="icon">
                        <i class="ion-android-settings"></i>
                    </div>
                    <a href='@Url.Action("AdicionarValor","Propriedade", new { idPropriedade =  ViewBag.IdPropriedade})' class="small-box-footer">Adicionar Nova <i class="fa fa-plus"></i></a>

                </div>
            </div>
            
        </div>

        <div class="">
            <div class="box b-commerce-box">
                <div class="box-header">
                    <div class="row">
                    </div>
                </div>
                <div class="box-body">
                    <table id="table-propriedades-valores" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Valor)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TipoDado)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Valor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoDado)
                                </td>
                                <td>
                                    <a href='@Url.Action("EditValor", "Propriedade", new { idPropriedadeValor = item.ID  })' class="mall-box-footers"><i class="fa fa-edit"></i></a>
                                    <a href='@Url.Action("DetailsValor", "Propriedade", new { idPropriedadeValor = item.ID })' class="mall-box-footers"><i class="fa fa-search"></i></a>
                                    <a href='@Url.Action("DeleteValor", "Propriedade", new { idPropriedadeValor = item.ID })' class="mall-box-footers"><i class="fa  fa-trash-o"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Valor)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TipoDado)
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>




<!-- jQuery 3 -->
<script src="~/dashboard_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="~/dashboard_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- DataTables -->
<script src="~/dashboard_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/dashboard_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('#table-propriedades-valores').DataTable();
    });
</script>

